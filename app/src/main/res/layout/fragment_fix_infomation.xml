<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4AC776"
            android:id="@+id/sua_info">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginLeft="122.5dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="122.5dp"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/lbl_fixinfo"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <FrameLayout
                android:id="@+id/container_backbtn"
                android:layout_width="45.5dp"
                android:layout_height="45.5dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="top|start">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_back"
                    style="@style/btnSolidRounded"
                    android:scaleType="centerInside" >
                </ImageView>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:cardCornerRadius="45dp">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/default_avatar"
                            android:scaleType="centerCrop"/>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:layout_gravity="bottom|end">
                        <ImageView
                            android:id="@+id/edit_profile_image"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_edit"/>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>


                <FrameLayout
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:includeFontPadding="false"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="@string/ho_va_ten"
                        android:textColor="#FF8391A1"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter"
                        android:background="@drawable/nhap_email"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:includeFontPadding="false"
                        android:gravity="center|start"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:hint="Tuổi"
                        android:textColor="#FF8391A1"
                        android:textSize="15sp"
                        android:fontFamily="@font/inter"
                        android:background="@drawable/nhap_email"/>
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/container_btncontinue"
                android:layout_width="335dp"
                android:layout_height="60dp"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/login_button"
                    android:fontFamily="@font/inter"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Tiếp tục"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </FrameLayout>

        </FrameLayout>
    </LinearLayout>

</layout>

