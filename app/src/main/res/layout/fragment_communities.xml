<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_btn"
            style="@style/btnSolidRounded"
            android:layout_width="45.5dp"
            android:layout_height="45.5dp"
            android:layout_gravity="start"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/community_container"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/community_container"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/lbl_communities"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <FrameLayout
                android:id="@+id/facebook_container"
                android:layout_width="360dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/container_frame3">

                <ImageView
                    android:id="@+id/community_fb"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:padding="7dp"
                    android:src="@drawable/ic_fb_background" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/inter"
                    android:singleLine="true"
                    android:text="@string/fanpage"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/insta_container"
                android:layout_width="360dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/container_frame3">

                <ImageView
                    android:id="@+id/community_insta"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:padding="7dp"
                    android:src="@drawable/ic_instagram" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/inter"
                    android:singleLine="true"
                    android:text="@string/fanpage"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tiktok_container"
                android:layout_width="360dp"
                android:layout_height="80dp"
                android:background="@drawable/container_frame3">

                <ImageView
                    android:id="@+id/community_tiktok"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:padding="7dp"
                    android:src="@drawable/ic_tiktok" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/inter"
                    android:singleLine="true"
                    android:text="@string/fanpage"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
            </FrameLayout>


        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>