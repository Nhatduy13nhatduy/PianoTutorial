<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4AC776"
            android:id="@+id/quenmatkhau">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginLeft="122.5dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="122.5dp"
                android:fontFamily="@font/inter"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/lbl_forgotpass"
                android:textColor="@color/black"
                android:textSize="35sp" />

            <FrameLayout
                android:id="@+id/container_backbtn"
                android:layout_width="45.5dp"
                android:layout_height="45.5dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="35dp"
                android:layout_gravity="top|start">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_back"
                    style="@style/btnSolidRounded"
                    android:scaleType="centerInside" >
                </ImageView>
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="top|center"
                    android:gravity="start|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/please_enter_email_to_change"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="top|start"
                    android:gravity="start|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:hint="Email"
                    android:textColor="#FF8391A1"
                    android:textSize="15sp"
                    android:fontFamily="@font/inter"
                    android:background="@drawable/nhap_email"/>

                <FrameLayout
                    android:id="@+id/container_btncontinue"
                    android:layout_width="335dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center|top"
                    android:layout_marginTop="10dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/login_button"
                        android:fontFamily="@font/inter"
                        android:includeFontPadding="false"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@string/tiep_tuc"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </FrameLayout>




            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

</layout>

